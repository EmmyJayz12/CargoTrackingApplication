
@{
    ViewBag.Title = "createtrackinfo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@Html.Partial("_AdminHeader")

<!--main content begins -->
<div class="ed_transprentbg ed_toppadder90 ed_bottompadder90" style="back">
    <div class="container content">
        <div class="row">
            <!-- left side bar for quick links -->
            <div class="col-lg-3 col-md-3 col-sm-3 adminsidebar">
                <h3 style="font-weight: bolder;COLOR:#FFF;">QUICK LINKS</h3>

                @Html.Partial("_HeaderLink")

            </div>
            <!-- left side bar for quick links ends -->
            <!-- right side bar for tracking details and feedback -->
            <div class="col-lg-9 col-md-9 col-sm-9 admincreateidbar">
                <hgroup>
                    <h4 style="font-weight: bolder;"><i class="fa fa-truck"></i>Update Tracking Id</h4>
                </hgroup>
                <div class="error_detect"> </div>
                @if (ViewBag.Message != null)
                {
                    <div class="alet alert-success">@ViewBag.Message</div>
                }
                <form class="panel panel-group createtrackid" action="" method="post">
                    <div class="row">
                        <div class="form-group col-md-12">
                            <input class="form-control" type="text" placeholder="Tracking Number" name="TrackingId" class="text-field input-style" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Enter the Location (E.g New York, United States)" name="Location" required />
                        </div>
                        <div class="form-group col-md-6">
                            <input class="form-control" type="text" placeholder="Specify the status of product(E.g Departed,Arrived at Facility, Inbound out of Custom)" name="Status" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-primary" id="quote-btn" name="submitCredentials" type="submit" class="theme-btn"><i class="fa fa-paper-plane"></i>Create</button>
                            <a href="/Home/TrackShipment" class="btn btn-success"><i class="fa fa-paper-plane"></i>Track Shipment</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>



    </div>

    <!-- right sidebar tracking details and feedback ends-->
</div>

